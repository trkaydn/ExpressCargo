@model List<AdminErrorVM>
@{
    ViewData["Title"] = "Express Kargo - Hata Logları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <h2 class="text-center">Hata Logları</h2><hr />
    <div class="col-lg-12">
        <div class="card">
            <div class="card-action">
                Hata Logları
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>DateTime</th>
                                <th>RequestMethod</th>
                                <th>StatusCode</th>
                                <th>ErrorPath</th>
                                <th>ErrorMessage</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ErrorTime.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.RequestMethod</td>
                                    <td>@item.StatusCode</td>
                                    <td>@item.ErrorPath</td>
                                    <td>@item.ErrorMessage</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Delete","AdminError",new { errorId=item.ErrorID })" class="btn btn-danger">X</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


