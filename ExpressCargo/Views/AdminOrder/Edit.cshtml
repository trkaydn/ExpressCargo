@model AdminUpdateOrderVM
@{
    ViewData["Title"] = "Express Kargo - Durum Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-action">
                Kargo Durumunu Güncelle
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-lg-6">
                        <h4><strong>Gönderici:</strong> @Model.SenderName</h4><br />
                        <h4><strong>Gönderi Türü:</strong> @Model.Size.SizeName</h4><br />
                        <h4><strong>Takip No:</strong> @Model.TrackNumber</h4><br />
                    </div>
                    <div class="col-lg-6">
                        <h4><strong>Alıcı:</strong> @Model.ReceiverName</h4><br />
                        <h4><strong> Toplam Tutar:</strong> @Model.Price ₺</h4><br />
                        <h4><strong>Gönderim Adresi:</strong> @Model.ShippingAddress</h4>
                    </div>
                </div>
                <form class="col s12" method="post">
                    <div class="switch text-center">
                        @Html.HiddenFor(x => x.OrderID)
                        <h4><strong>Mevcut durum:</strong></h4><br />
                        @Html.DropDownListFor(x => x.StatusID, (List<SelectListItem>)Model.StatusList, new { @class = "form-control" })
                    </div><br />
                    <div class="switch text-center">
                        <a href="@Url.Action("Index","AdminOrder")" class="waves-effect waves-red btn-large btn-danger">İptal</a>
                        <button type="submit" class="waves-effect waves-light btn-large ">Kaydet</button>
                    </div>
                </form>
                <div class="clearBoth"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>

